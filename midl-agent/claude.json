{
  "name": "MIDL Agent",
  "version": "1.0.0",
  "description": "AI assistant for vibecoders building Web3 apps on Bitcoin and MIDL with the JavaScript SDK",
  "author": "Your Team",
  "mcpServers": {
    "midl-discord-poster": {
      "command": "npx",
      "args": ["tsx", "src/mcp-server/index.ts"],
      "cwd": "."
    }
  },
  "commands": {
    "init": {
      "description": "Initialize the MIDL agent and fetch latest documentation",
      "trigger": "start of session",
      "action": "check_docs_and_setup"
    },
    "midl": {
      "description": "Trigger for any MIDL-related questions or tasks",
      "keywords": ["midl", "bitcoin", "web3", "transaction", "broadcast", "rune", "executor"],
      "action": "engage_midl_assistance"
    },
    "bug": {
      "description": "Report a bug with structured template",
      "keywords": ["bug", "issue", "error", "broken", "not working"],
      "action": "create_bug_report"
    },
    "docs": {
      "description": "Access and search MIDL documentation",
      "keywords": ["docs", "documentation", "how to", "guide", "tutorial"],
      "action": "search_and_fetch_docs"
    },
    "mcp": {
      "description": "Manage and use installed MIDL MCPs",
      "keywords": ["mcp", "model context protocol"],
      "action": "manage_mcp_tools"
    },
    "discord": {
      "description": "Manage Discord bot and forum posting",
      "keywords": ["discord", "post", "share", "forum"],
      "action": "manage_discord"
    }
  },
  "capabilities": [
    "Documentation synchronization (auto-updates at session start)",
    "React hooks integration assistance",
    "Bitcoin transaction handling",
    "TypeScript support and type safety",
    "MIDL protocol interaction",
    "Diagnostic report generation for bug reports",
    "Discord bot with slash commands and forum posting",
    "MCP server discovery and utilization",
    "Code generation and examples",
    "Performance optimization suggestions",
    "Best practices guidance for vibecoders"
  ],
  "sdkPackages": [
    "@midl/react - React hooks for MIDL",
    "@midl/core - Core MIDL functionality and Bitcoin protocol utilities",
    "@midl/contracts - Contract deployments and ABIs",
    "@midl/executor-react - Executor-specific React hooks"
  ],
  "documentation": {
    "sourceUrl": "https://js.midl.xyz/",
    "docsUrl": "https://js.midl.xyz/docs",
    "githubUrl": "https://github.com/midl-xyz/midl-js",
    "npmBase": "https://www.npmjs.com/package",
    "lastChecked": "at session start",
    "updateFrequency": "every session"
  },
  "features": {
    "autoDocUpdate": true,
    "contextAwareness": true,
    "proactiveAssistance": true,
    "diagnosticReports": true,
    "mcpIntegration": true,
    "codeGeneration": true,
    "performanceTips": true,
    "discordIntegration": true
  }
}
